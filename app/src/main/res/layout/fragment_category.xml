<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context="com.tzztzt.bookworm.CategoryFragment">

    <LinearLayout
        android:orientation="vertical"

        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_weight="1"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:background="@color/white"
                android:drawableTop="@mipmap/logo_java"
                android:text="Java"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="PHP"
                android:drawableTop="@mipmap/logo_php"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="JavaScript"
                android:drawableTop="@mipmap/logo_js"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:layout_weight="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:background="@color/white"
                android:drawableTop="@mipmap/logo_csharp"
                android:text="C#"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="SWIFT"
                android:drawableTop="@mipmap/logo_swift"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Python"
                android:drawableTop="@mipmap/logo_py"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:background="@color/white"
                android:drawableTop="@mipmap/logo_h5"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="HTML" />

            <Button
                android:layout_weight="1"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:background="@color/white"
                android:id="@+id/category_kotlin"
                android:drawableTop="@mipmap/logo_ruby"
                android:text="Ruby"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="Perl"
                android:drawableTop="@mipmap/logo_perl"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingTop="20dp"
                android:paddingBottom="20dp"
                android:text="C++"
                android:drawableTop="@mipmap/logo_cpp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="AI"
                android:drawableTop="@mipmap/logo_ai"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Button
                android:layout_weight="1"
                android:background="@color/white"
                android:paddingBottom="20dp"
                android:paddingTop="20dp"
                android:text="VR"
                android:drawableTop="@mipmap/logo_vr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>

    </LinearLayout>





</RelativeLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/order_card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_alignParentStart="true"
    android:layout_below="@+id/order_card1"
    android:layout_marginTop="5dp"
    android:background="#fcf8f8"
    android:clickable="true"
    android:foreground="?attr/selectableItemBackground">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/order_store"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:gravity="center_vertical">

            <ImageView
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:src="@mipmap/store" />

            <TextView
                android:id="@+id/order_date"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:text="2017-4-23" />
        </LinearLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="8dp"
            android:layout_marginTop="5dp"
            android:text="已送达"
            android:textColor="@color/colorAccent" />

        <RelativeLayout
            android:id="@+id/order_content"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/order_store"
            android:gravity="center_vertical"
            android:padding="4dp">

            <ImageView
                android:id="@+id/order_pic"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:scaleType="fitCenter"
                android:src="@drawable/introalgorithms" />

            <TextView
                android:id="@+id/book_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="top"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="8dp"
                android:layout_toRightOf="@+id/order_pic"
                android:text="算法导论（原书第三版）"
                android:textSize="10sp" />

            <TextView
                android:id="@+id/book_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/book_title"
                android:layout_marginLeft="20dp"
                android:layout_toRightOf="@+id/order_pic"
                android:text="超过50万人阅读的算法圣经!算法标准教材"
                android:textSize="8sp" />
        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_below="@+id/order_content"
            android:gravity="end|center_vertical"
            android:paddingEnd="8dp">

            <TextView
                android:id="@+id/order_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="共1本图书 实付款: ¥105.60" />

        </LinearLayout>

    </RelativeLayout>

</LinearLayout>